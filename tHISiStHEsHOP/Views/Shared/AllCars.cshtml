@model tHISiStHEsHOP.Models.Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.Img" alt="@Model.Name" />
    <h2>@Model.Name</h2>
    <p>@Model.ShortDesc</p>
    <p>Price: @Model.Price</p>
    <p><a asp-controller="Cars" asp-action="Select" asp-route-Id="@Model.Id" class="btn btn-success" type="submit">Overview</a></p>
</div>